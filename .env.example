# ─── Discord Configuration ───
# Bot token from https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_bot_token_here

# Your Discord User ID (Enable Developer Mode > Right-click name > Copy User ID)
ALLOWED_USER_ID=your_user_id_here

# Channel ID where the bot operates (optional - leave empty for DMs)
NOTIFICATION_CHANNEL_ID=

# ─── Discord Webhook (for hooks - no bot needed for one-way notifications) ───
DISCORD_WEBHOOK_URL=your_webhook_url_here

# ─── Security ───
# Passphrase required before bot accepts commands (optional but recommended)
BOT_PASSPHRASE=

# Auto-lock after N minutes of inactivity (0 = disabled)
AUTO_LOCK_MINUTES=15

# ─── Claude Code Settings ───
# Max concurrent resume jobs
MAX_QUEUE_SIZE=5

# Timeout for claude -p commands in seconds
CLAUDE_TIMEOUT_SECONDS=300
